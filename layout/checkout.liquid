<!DOCTYPE html>
<html lang="{{ locale }}" dir="{{ direction }}" class="{{ checkout_html_classes }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, height=device-height, minimum-scale=1.0, user-scalable=0">
    <meta name="referrer" content="origin">

    <title>{{ page_title }}</title>

    {{ content_for_header }}

    {{ checkout_stylesheets }}
    {{ checkout_scripts }}

    <script type="application/javascript" async src="https://sdk.postscript.io/integrations/sdk-min.js"></script>

    <!-- <script>window.RiseStoreFront={customer_id:"{{ customer.id }}"};</script> -->
    <!-- <script src="https://str.rise-ai.com/checkout?shop=westside-barbell.myshopify.com"></script> -->

    <!--
      Expand mobile checkout summary by default
      https://community.shopify.com/c/Shopify-Design/Expand-order-summary-by-default-on-checkout/m-p/602129/highlight/true#M151137
    -->
    <script>
      window.addEventListener('DOMContentLoaded', function(event) {
        if (Shopify.Checkout.step === "contact_information") {
          Checkout.$('[data-drawer-toggle="[data-order-summary]"]').click();
        }
      })
    </script>
  </head>

  <body>
    {% section 'checkout-announcement' %}

    {{ skip_to_content_link }}

    <header class="banner" data-header role="banner">
      <div class="wrap">
        {{ content_for_logo }}
      </div>
    </header>

    {{ order_summary_toggle }}
    <div class="content" data-content>
      <div class="wrap">
        <div class="main">
          <header class="main__header" role="banner">
            {{ content_for_logo }}
            {{ breadcrumb }}
            {{ alternative_payment_methods }}
          </header>
          {% section 'checkout-upsell' %}
          <main class="main__content" role="main">
            {{ content_for_layout }}
          </main>
          <footer class="main__footer" role="contentinfo">
            {{ content_for_footer }}
          </footer>
        </div>
        <aside class="sidebar" role="complementary">
          <div class="sidebar__header">
            {{ content_for_logo }}
          </div>
          <div class="sidebar__content">
            {{ content_for_order_summary }}
          </div>
        </aside>
      </div>
    </div>

    {{ tracking_code }}
  </body>
</html>
