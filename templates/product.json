{
  "wrapper": "div.product",
  "sections": {
    "metadata": {
      "type": "template-product-metadata",
      "settings": {}
    },
    "breadcrumbs": {
      "type": "template-product-breadcrumbs",
      "settings": {}
    },
    "main": {
      "type": "template-product-top",
      "settings": {
        "mobile_image_style": "scrollbar",
        "desktop_images_type": "tiles",
        "rhpa_type": "swatch",
        "rhpa_color_swatch_type": "swatch",
        "show_quantity_selector": true,
        "enable_product_accordions": true
      }
    },
    "recommendations": {
      "type": "template-product-recommendations",
      "settings": {
        "product_limit": 4,
        "header_text": "You might also like",
        "enable_scrollbar": true
      }
    },
    "reviews": {
      "type": "template-product-reviews",
      "settings": {}
    },
    "recently-viewed": {
      "type": "recently-viewed",
      "settings": {
        "heading": "Recently viewed",
        "product_limit": 3,
        "enable_scrollbar": true
      }
    },
    "klaviyo": {
      "type": "template-product-klaviyo",
      "settings": {}
    }
  },
  "order": [
    "metadata",
    "breadcrumbs",
    "main",
    "recommendations",
    "reviews",
    "recently-viewed",
    "klaviyo"
  ]
}