<div
  class="page four-oh-four lazyload"
  style="background-image: url('{{ settings.four_oh_four_image | img_url: 'medium' }}');"
  data-bg="{{ settings.four_oh_four_image | img_url: 'master' }}"
>
  <div class="overlay"></div>
  <div class="four-oh-four-inner max-width">
    <h1>{{ settings.four_oh_four_header }}</h1>
    <p>{{ settings.four_oh_four_subtext }}</p>
    <div class="links-wrapper">
      <a class="button" href="{{ settings.four_oh_four_left_link }}">{{ settings.four_oh_four_left_link_text }}</a>
      <a class="button secondary" href="{{ settings.four_oh_four_right_link }}">{{ settings.four_oh_four_right_link_text }}</a>
    </div>
  </div>
</div>
