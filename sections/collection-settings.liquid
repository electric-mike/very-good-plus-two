<script>
  window.enableProductImageHover = {{ section.settings.enable_product_image_hover }};
  window.enableVendorFilter = {{ section.settings.enable_vendor_filter }};
</script>

{% schema %}
  {
    "name": "Collection Settings",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_product_image_hover",
        "label": "Enable Product Image Hover",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "enable_vendor_filter",
        "label": "Enable Vendor (Brand) Filter",
        "default": false
      }
    ]
  }
{% endschema %}
