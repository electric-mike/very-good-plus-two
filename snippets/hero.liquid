{% if page.url == '/pages/style-guide' %}
  <div
    class="hero-wrapper style-guide-hero"
    {% if settings.style_guide_background %}style="background: url({{ settings.style_guide_background | img_url: 'master' }})"{% endif %}
  >
    <div class="hero-content">
      <div class="hero-logo">
        <img src="{{ settings.style_guide_logo | img_url: 'master' }}" />
      </div>
      <div class="hero-content">
        <p class="hero-text">{{ page.title }}</p>
      </div>
    </div>
  </div>
{% elsif template == 'blog' %}
  {%- assign base_url = settings.blog_image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
  {% if base_url contains 'no-image' %}
    <div class="max-width">
      <div class="no-image-category-hero-wrapper">
        <div class="category-hero tablet-constrain-items">
          <div class="category-hero-inner category-hero-no-image">
            <div class="hero">
              <h1 class="hero"><span>{{ blog.title }}</span></h1>
              {% if settings.blog_description != '' %}
                <br>
                <p>{{ settings.blog_description }}</p>
              {% elsif blog.description != '' %}
                <br>
                <p>{{ blog.description }}</p>
              {% endif %}
            </div>
          </div>
        </div>
      </div>
    </div>
  {% else %}
    <div class="category-hero category-hero-image">
      <img
        id="hero-image-desktop"
        class="lazyload blur-up"
        src="{{ settings.blog_image | img_url: '200x' }}"
        alt="{{ blog.title | escape }}"
        data-src="{{ base_url }}"
        data-widths="[360, 540, 720, 900, 1080, 1600]"
        data-aspectratio="{{ collection.image.aspect_ratio }}"
        data-sizes="auto"
        style="position: absolute; width: 100%; height: 100%; object-fit: cover;"
      />
      <noscript>
        <img class="lazyloaded" src="{{ settings.blog_image | img_url: '800x' }}" alt="{{ collection.title | escape }}">
      </noscript>

      <div class="category-hero-inner category-hero-image max-width custom-constrain-items">
        <div class="hero">
          <h1 class="hero"><span>{{ blog.title }}</span></h1>
          {% if settings.blog_description != '' %}
            <br>
            <p class="white">{{ settings.blog_description }}</p>
          {% elsif blog.description != '' %}
            <br>
            <p class="white">{{ blog.description }}</p>
          {% endif %}
        </div>
      </div>
    </div>
  {% endif %}
{% else %}
  {%- assign base_url = settings.collection_image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
  {% if base_url contains 'no-image' %}
    <div class="max-width">
      <div class="no-image-category-hero-wrapper">
        <div class="category-hero tablet-constrain-items">
          <div class="category-hero-inner category-hero-no-image">
            <div class="hero">
              <h1 class="hero"><span>{{ page.title }}</span></h1>
            </div>
          </div>
        </div>
      </div>
    </div>
  {% else %}
    <div class="category-hero category-hero-image">
      <img
        id="hero-image-desktop"
        class="lazyload blur-up"
        src="{{ settings.collection_image | img_url: '200x' }}"
        alt="{{ collection.title | escape }}"
        data-src="{{ base_url }}"
        data-widths="[360, 540, 720, 900, 1080, 1600]"
        data-aspectratio="{{ collection.image.aspect_ratio }}"
        data-sizes="auto"
        style="position: absolute; width: 100%; height: 100%; object-fit: cover;"
      />
      <noscript>
        <img class="lazyloaded" src="{{ settings.collection_image | img_url: '800x' }}" alt="{{ collection.title | escape }}">
      </noscript>

      <div class="category-hero-inner category-hero-image max-width custom-constrain-items">
        <h1 class="hero"><span>{{ page.title }}</span></h1>
      </div>
    </div>
  {% endif %}
{% endif %}
