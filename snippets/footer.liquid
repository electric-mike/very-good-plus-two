<footer>
  <div class="footer-top-wrapper">
    <div class="footer-inner max-width">
      <div class="footer-left">
        <div class="footer-logo-wrapper">
          <div class="footer-logo">
            <img src="{{ settings.footer_logo | img_url: 'master' }}" alt="{{ shop.name }}" />
          </div>
        </div>
      </div>
      <div class="footer-right">
        {% for link in linklists[settings.footer_linklist].links %}
        {% assign child_list_handle = link.title | handleize %}
          <div class="footer-column">
            <!-- <a href="{{ link.url }}"><h4 class="footer-main-link">{{ link.title }}</h4></a> -->
            <h4 class="footer-main-link">{{ link.title }}</h4>
            {% if linklists[child_list_handle].links != blank %}
              {% for childlink in linklists[child_list_handle].links %}
                <a class="child-link" href="{{ childlink.url }}"><p>{{ childlink.title | escape }}</p></a>
              {% endfor %}
            {% endif %}
          </div>
        {% endfor %}
      </div>

      <div class="footer-klaviyo-wrapper">
        {% if settings.klaviyo_desktop_form_id.size > 0 or settings.klaviyo_mobile_form_id.size > 0 %}
          <div class="footer-klaviyo-description">
            <h4 class="footer-main-link">News & updates</h4>
            <p class="small">Sign up to get the latest on sales, new releases and more. We promise not to spam your inbox!</p>
          </div>
          <div class="klaviyo-form-{{ settings.klaviyo_desktop_form_id }} klaviyo-desktop"></div>
          <div class="klaviyo-form-{{ settings.klaviyo_mobile_form_id }} klaviyo-mobile"></div>
        {% endif %}
      </div>
    </div>
  </div>

  <div class="footer-bottom">
    <div class="max-width">
      <div class="footer-bottom-inner">
        <div class="footer-copyright">
          <p>
            Â© {{ 'now' | date: "%Y" }} {{ shop.name }}. {{ 'layout.footer.copyright' | t }}
            <br>
            <a href="/pages/privacy-policy">Privacy Policy</a>
            <a href="/pages/terms-of-service">Terms Of Service</a>
          </p>
        </div>
        <div class="footer-social">
          {% if settings.facebook_link != blank %}
            <a href="{{ settings.facebook_link }}" target="_blank" rel="noreferrer noopener">
              <i class="social social-facebook" aria-label="Facebook"></i>
            </a>
          {% endif %}
          {% if settings.instagram_link != blank %}
            <a href="{{ settings.instagram_link }}" target="_blank" rel="noreferrer noopener">
              <i class="social social-instagram" aria-label="Instagram"></i>
            </a>
          {% endif %}
          {% if settings.twitter_link != blank %}
            <a href="{{ settings.twitter_link }}" target="_blank" rel="noreferrer noopener">
              <i class="social social-twitter" aria-label="Twitter"></i>
            </a>
          {% endif %}
          {% if settings.pinterest_link != blank %}
            <a href="{{ settings.pinterest_link }}" target="_blank" rel="noreferrer noopener">
              <i class="social social-pinterest" aria-label="Pinterest"></i>
            </a>
          {% endif %}
          {% if settings.youtube_link != blank %}
            <a href="{{ settings.youtube_link }}" target="_blank" rel="noreferrer noopener">
              <i class="social social-youtube" aria-label="Youtube"></i>
            </a>
          {% endif %}
          {% if settings.snapchat_link != blank %}
            <a href="{{ settings.snapchat_link }}" target="_blank" rel="noreferrer noopener">
              <i class="social social-snapchat" aria-label="Snapchat"></i>
            </a>
          {% endif %}
          {% if settings.email_link != blank %}
            <a href="mailto:{{ settings.email_link }}" target="_blank" rel="noreferrer noopener">
              <i class="social social-email" aria-label="Email"></i>
            </a>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</footer>
