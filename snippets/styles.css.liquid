/* SWATCHES / COLOR HELPER CLASSES */
{%- assign colors = settings.product_colors | strip_newlines | downcase | split: ',' -%}
{% for color in colors %}
.color-swatch .{{ color | split: ': ' | first | handleize | strip }},
.color-swatches .{{ color | split: ': ' | first | handleize | strip }} {
  background: {{ color | split: ': ' | last | strip }};
  color: {{ color | split: ': ' | last | strip }};
}
{% endfor %}

/*------------------
Base CSS Variables
Overridden below using Theme Customize
------------------*/
:root {
  /*------------------
  FONT
  ------------------*/
  --shop-primary-font: 'neue-haas-grotesk-text', Helvetica, sans-serif;
  --shop-secondary-font: 'neue-haas-grotesk-text', Helvetica, sans-serif;
  --shop-font-family: 'neue-haas-grotesk-text', Helvetica, sans-serif;

  /*------------------
  COLORS
  ------------------*/
  --shop-white: #ffffff;
  --shop-black: #060606;
  --shop-dark-gray: #7B7D80;
  --shop-gray: #9B9B9B;
  --shop-medium-gray: #E7E7E7;
  --shop-light-gray: #F5F5F5;
  --shop-red: #C80000;

  --shop-overlay: rgba(0, 0, 0, 0.4);


  /*------------------
  THEME COLORS
  NOTE: cannot use existing vars due to css var limitations
  ------------------*/
  --shop-primary-color: #9B9B9B;
  --shop-secondary-color: #060606;

  /*------------------
  SHADOWS
  ------------------*/
  --shop-shadow: 0px 20px 40px rgba(0, 0, 0, 0.08);
  --shallow-shadow: 0 0 10px rgba(0, 0, 0, 0.1);

  /*------------------
  IMAGE FILTER COLORS
  https://codepen.io/sosuke/pen/Pjoqqp
  ------------------*/
  --shop-white-filter: invert(100%) sepia(0%) saturate(0%) hue-rotate(93deg) brightness(103%) contrast(150%);
  --shop-black-filter: brightness(0) saturate(100%);
  --shop-gray-filter: invert(54%) sepia(6%) saturate(156%) hue-rotate(177deg) brightness(89%) contrast(93%);

  /*------------------
  ADVANCED CUSTOMIZATION DECLARATIONS
  ------------------*/
  --shop-header-background-color: var(--shop-white);
  --shop-header-link-color: var(--shop-black);
  --shop-footer-background-color: var(--shop-light-gray);
  --shop-footer-link-color: var(--shop-black);
}


