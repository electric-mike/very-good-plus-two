<div class="column-12-tablet-vert-4">
  <div id="customer-detail" class="customer-detail">
    <h3 class="name">{{ 'customer.account.title' | t: name: customer.name }}</h3>
    <p class="email">{{ customer.email }}</p>
    <div class="account-links">
      <a class="account-link" id="account" href="{{ routes.account_url }}">{{ 'customer.account.details' | t }}</a>
      <a class="account-link" id="view-address" href="/account/addresses">{{ 'customer.account.view_addresses' | t }}</a>
      <!-- Begin ReCharge code -->
      {% if customer.metafields.subscriptions.customer_string %}
        <a id="rc_link_container" class="account-link" href="/tools/recurring/login">Manage Subscriptions</a>
      {% endif %}
      <!-- End ReCharge code -->
    </div>
    <a class="featured" id="log_out" href="/account/logout">{{ 'layout.customer.log_out' | t }}</a>
    <div class="contact-area">
      <h6 class="contact-header">{{ 'contact.info.title' | t }}</h6>
      <p>{{ 'contact.info.phone_text' | t }} <a target="_blank" rel="noreferrer noopener" href="tel:{{ 'contact.info.phone_number' | t | replace: '(' , '' | replace: ')' , '' | replace: '-' , '' | replace: ' ' , '' }}">{{ 'contact.info.phone_number' | t }}</a></p>
      <p>{{ 'contact.info.email_text' | t }} <a target="_blank" rel="noreferrer noopener" href="mailto:{{ 'contact.info.email_address' | t }}">{{ 'contact.info.email_address' | t }}</a></p>
    </div>
  </div>
</div>
