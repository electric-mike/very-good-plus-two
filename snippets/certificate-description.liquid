{% if product.metafields.certDescription.description %}
<div class="certificate-description max-width">
  <div class="certificate-description-inner row">
    <div class="column-12-tablet-vert-6">
      <div class="certificate-description-inner max-width custom-constrain-items">
        <h2 class="light-blue">{% if product.metafields.certDescription.title %}{{ product.metafields.certDescription.title }}{% else %}THE EXAM{% endif %}</h2>
        {{ product.metafields.certDescription.description }}
      </div>
    </div>
    <div class="column-12-tablet-vert-6">
      <div class="certificate-image">
        {% if product.metafields.certDescription.image %}
          <img
            class="lazyload blur-up"
            src="{{ 'placeholder-image.png' | asset_img_url: '200x' }}"
            alt="overview"
            data-src="{{ product.metafields.certDescription.image }}"
            data-widths="[360, 540, 720, 900, 1080, 1600]"
            data-sizes="auto"
            style="width: 100%; height: 100%; object-fit: cover; object-position: center;"
          />
          <noscript>
            <img class="lazyloaded" src="{{ product.metafields.certDescription.image }}" alt="{{ product.title | escape }}">
          </noscript>
        {% else %}
          {%- assign base_url = 'base-header-image.jpg' | asset_img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
          <img
            class="lazyload blur-up"
            src="{{ 'base-header-image.jpg' | asset_img_url: '200x' }}"
            alt="overview"
            data-src="{{ base_url }}"
            data-widths="[360, 540, 720, 900, 1080, 1600]"
            data-sizes="auto"
            style="width: 100%; height: 100%; object-fit: cover; object-position: center;"
          />
          <noscript>
            <img class="lazyloaded" src="{{ 'base-header-image.jpg' | asset_img_url: '800x' }}" alt="{{ product.title | escape }}">
          </noscript>
        {% endif %}

        <div class="certificate-description-image-text">
          <div class="left-text">
            <h1 style="font-size: 2em; max-width: 300px">“If you run with the <span class="black">lame</span> you will develop a  <span class="black">limp</span>.”</h1>
            <style>@media(min-width: 1100px) { #louie { margin-bottom: 3em; } }</style>
            <h3 id="louie">- Louie Simmons</h3>
            <a href="/collections/education" class="button">Learn From Louie</a>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endif %}
